{
    "name": "phacman/php-console-table",
    "type": "library",
    "description": "Rendering a table in the console",
    "keywords": ["php", "render", "console", "table"],
    "homepage": "https://github.com/phacman/php-console-table",
    "license" : "MIT",
    "authors": [
        {
            "name": "Pavel Vasin",
            "email": "phacman@yandex.ru",
            "homepage": "https://phacman.ru"
        }
    ],
    "scripts": {
        "test": "phpunit",
        "format-code": "php-cs-fixer fix --allow-risky=yes"
    },
    "require": {
        "php": ">=8.1",
        "ext-intl": "*",
        "ext-iconv": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^3"
    },
    "autoload": {
        "psr-4": {
            "PhacMan\\ConsoleTable\\": "src/"
        },
        "files": [
            "src/Resources/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "PhacMan\\ConsoleTable\\Tests\\": "tests/"
        }
    }
}
